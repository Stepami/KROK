@model smartdressroom.Models.ClothesModel
@{
    Layout = @Url.Content("~/Views/Shared/_Layout.cshtml");
}
<!DOCTYPE html>
<html>
<head>
    <style>
        h1 {
            color: white;
            position: absolute;
            top: 50%;
            left: 50%
        }
    </style>
    <script>
        function fill() {
            var size_new = document.createElement("h1");
            size_new.innerHTML = "@Model.Size";
            document.getElementById("size").appendChild(size_new);
            var price_new = document.createElement("h1");
            price_new.innerHTML = @Model.Price;
            document.getElementById("price").appendChild(price_new);
        }
    </script>
</head>
<body onload="fill()">
    <div>
        <img src="@Model.ImgPath" alt="cart icon"
             style="position: absolute; top: 50%; left: 50%; transform: translate(-50%,-50%)">
        <p style="position: absolute; bottom: 0px; left: 50%; color: white">@Model.Brand</p>
    </div>
</body>
</html>