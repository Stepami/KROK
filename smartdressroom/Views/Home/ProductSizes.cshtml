@model string[]
@{
    Layout = null;
}
@for (int i = 0; i < Model.Length; i++)
{
    @if (i == 0)
    {
        <label class="btn btn-dark active">
            <input type="radio" name="sizes" id="size1" autocomplete="off" value="@Model[0]" checked> @Model[0]
        </label>
    }
    else
    {
        <label class="btn btn-dark">
            <input type="radio" name="sizes" id="size@(i + 1)" autocomplete="off" value="@Model[i]"> @Model[i]
        </label>
    }
}