@using smartdressroom.Services
@inject ICartService cart

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="/node_modules/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css" />
    <script src="/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/modernizr.js"></script>
</head>
<body>
    <div class="row mx-0">
        <div id="leftbar" class="col-2">
            <div id="cart" class="float-left sidebar-item">
                <a href="@Url.Action("Display", "Cart")">
                    <img class="menu" src="@Url.Content("~/images/icons/cart.png")" alt="cart icon">
                </a>
                <div class="inner-content">@cart.GetCart(Context.Session).TotalItemCount()</div>
                <span id="span1">@cart.GetCart(Context.Session).ComputeTotalValue()</span>
            </div>
            <div id="consultant" class="float-left sidebar-item">
                <img class="menu" src="@Url.Content("~/images/icons/consult.png")" alt="consult icon">
            </div>
            <form id="getproduct" method="get" action="@Url.Action("Product", "Home")">
                <div class="form-group">
                    <input class="form-control" type="number" 
                           name="code" placeholder="Артикул"
                           autofocus />
                </div>
                <button type="submit" class="form-control">сканировать</button>
            </form>
        </div>
        <div id="midbar" class="col">
            <div class="modal fade" id="consultModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            <img id="consultcalled" src="~/images/icons/consultdone.png" alt="consultdone" />
                        </div>
                        <div id="consultModalfooter" class="modal-footer justify-content-center">
                            <img id="okimg" src="~/images/icons/ok.png" alt="ok" />
                        </div>
                    </div>
                </div>
            </div>
            @RenderBody()
        </div>
        <div id="rightbar" class="col-2">
            <div id="reboot" class="float-right sidebar-item" >
                <a href="@Url.Action("ClearCart", "Cart")">
                    <img class="menu" src="@Url.Content("~/images/icons/reboot.png")" alt="size icon">
                </a>
            </div>
            <div id="user" class="float-right sidebar-item">
                <img class="menu" src="@Url.Content("~/images/icons/user.png")" alt="size icon">
            </div>
        </div>
    </div>
    <img id="croclogo" src="@Url.Content("~/images/icons/krok.png")" alt="krok logo">
</body>
</html>
